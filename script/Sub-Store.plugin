#!name = Sub-Store缓存版
#!desc = 高级订阅管理工具，此版本只能在Loon下使用，使用前请在本插件的详情页面为[PROXY]项分配代理策略。
#!openUrl = https://sub.store
#!author = Peng-YM
#!homepage = https://gitlab.com/lodepuly/vpn_tool/-/tree/main/Tool/Loon/Plugin
#!icon = https://gitlab.com/lodepuly/iconlibrary/-/raw/master/Other_icon/80px/Sub-Store.png
#!select = 节点缓存有效期, 1分钟, 5分钟, 10分钟, 30分钟, 1小时, 2小时, 3小时, 6小时, 12小时, 24小时, 48小时, 72小时

[Rule]
DOMAIN, sub-store.vercel.app, PROXY

[Script]
http-request https?:\/\/sub\.store script-path = https://gitlab.com/lodepuly/vpn_tool/-/raw/main/Resource/Script/Sub-Store/sub-store_core_cache.js, requires-body = true, timeout = 20000, tag = Sub-Store Core

cron "0 0 * * *" script-path = https://gitlab.com/lodepuly/vpn_tool/-/raw/main/Resource/Script/Sub-Store/cron-sync-artifacts.min.js, tag = Sub-Store Sync

[MITM]
hostname = sub.store